<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.monica.myapplication">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Home"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".Todo_list"
            android:label="@string/title_activity_todo_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UpdateListItem"
            android:label="@string/title_activity_updatelistitem"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddNewChild"
            android:label="@string/title_activity_addnewchild"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UpdateEventItem"
            android:label="@string/title_activity_updateeventitem"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddNewEvent"
            android:label="@string/title_activity_addnewevent"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GuestsActivity"
            android:label="@string/title_activity_guestsactivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UpdateGuestItem"
            android:label="@string/title_activity_updateguestitem"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddNewGuest"
            android:label="@string/title_activity_addnewguest"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SignupActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>